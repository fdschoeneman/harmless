.slider-block
  #myCarousel.carousel.slide
    / Carousel items
    .carousel-inner
      .active.item
        / %img{:alt => "Someimage", :src => "img/slide_bg2.jpg"}/
        = image_tag "img/slide_bg2.jpg"
        .caption.middle-left.container
          %p.small.white.text-dark Introducing
          %p.medium.white.text-pink Bootstrap based template
          %p.large.pink.add-space TYPICA
      .item
        = image_tag "img/slide_bg1.jpg"
        .caption.bottom-right.container
          %p.large.pink.add-space Better carousel
          %p.small.white Multiple text & background colors
          %p.small.white Multiple caption positions
          %p.medium.white.text-pink and much more!
      .item
        = image_tag "img/slide_bg3.jpg"
        .caption.top-right.container
          %p.medium.pink.add-space Isn't that just
          %p.large.white.text-dark AWESOME?
    / Carousel nav
    %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} &lsaquo;
    %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} &rsaquo;
