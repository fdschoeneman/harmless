= form_for @community do |f|
  - if @community.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community.errors.count, "error")} prohibited this community from being saved:"
      %ul
        - @community.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :nearest_town
    = f.text_field :nearest_town
  .field
    = f.label :population
    = f.text_field :population
  .field
    = f.label :practices
    = f.text_field :practices
  .field
    = f.label :cuisine
    = f.text_field :cuisine
  .field
    = f.label :religions
    = f.text_field :religions
  .field
    = f.label :languages
    = f.text_field :languages
  .actions
    = f.submit 'Save'
